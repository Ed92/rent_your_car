<%= simple_form_for([@car, @booking]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
<!--
  <div class="form-inputs">
    <%= f.input :start_date %>
    <%= f.input :end_date%>
  </div> -->

  <div class="fhold">
    <input  class="start datepicker" name="start_date" type="datetime-local" placeholder="Start date" />
    <input class="datepicker" name="end_date" type="datetime-local" placeholder="End date" />
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
