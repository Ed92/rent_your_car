<div class="my-wrapper">

  <div class="form">
    <h1> <%= @car.make %> - Â£<%= @car.rental_rate %> per day </h1>
    <div><%= image_tag "#{@car.photo}", id: "car", :class => "center", :style => "width: 50%" %></div>
    <div class="my-container">
      <div class="booking_f item">
        <h2> Book Car </h2>
        <%= render 'booking_form'%>
      </div>
      <div id="map" class="item" style="width: 100%; height: 600px; "data-markers="<%= @markers.to_json %>"></div>
