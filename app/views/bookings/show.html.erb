
<div class="wrapper">
  <div class="container">
    <div class="row">
      <h1 class="header1"> Your Booking Details </h1>

      <div class="message">
        <%= cl_image_tag @car.photo, id: "car_booking" %>
        <!--  <img src="https://kitt.lewagon.com/placeholder/users/gabriel-dehan" -->
        <div class="message-name">
          <h3><strong><%=@booking.car.make.capitalize %></strong></h3>
          <p> <%= @booking.start_date %> to <%= @booking.end_date %></p>
        </div>
        <div class="message-body">
          <h3><strong>Your car details</strong></h3>
          <p> <%= @booking.car.description %> </p>
        </div>
        <div class="message-status">
          <h3 class="status pending"><strong>Pending</strong></h3>
          <p class="price"> Â£ <%= @booking.price %></p>
        </div>
      </div>

      <div class="links-to-pages">
        <%= link_to "home", root_path %>
        <%= link_to "view more cars", cars_path %>
      </div>
    </div>
  </div>
</div>
